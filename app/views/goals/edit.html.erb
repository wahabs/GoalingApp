<h1>Edit Goal</h1>

<%= render partial: "shared/error", collection: flash[:errors] %>

<form action="<%= goal_url(@goal) %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH">

  <label for="goal_title">Title</label>
  <input type="text" name="goal[title]" value="<%= @goal.title %>" id="goal_title">

  <label for="goal_body">Body</label>
  <textarea name="goal[body]" rows="8" cols="40" id="goal_body"><%= @goal.body %></textarea>

  <label for="goal_is_private_true">Private</label>
  <input <%= "checked" if @goal.is_private %> type="radio" name="goal[is_private]" value="true" id="goal_is_private_true" >
  <label for="goal_is_private_false">Public</label>
  <input <%= "checked" unless @goal.is_private %> type="radio" name="goal[is_private]" value="false" id="goal_is_private_false" >

  <label for="goal_completed_true">Completed</label>
  <input <%= "checked" if @goal.completed %> type="radio" name="goal[completed]" value="true" id="goal_completed_true" >
  <label for="goal_completed_false">Not completed</label>
  <input <%= "checked" unless @goal.completed %> type="radio" name="goal[completed]" value="false" id="goal_completed_false" >

  <input type="submit" value="Update">
</form>
