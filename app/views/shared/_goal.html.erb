
<% if current_user == goal.user %>

  <strong><%= link_to "#{goal.title}", goal_url(goal) %> <%= (goal.completed) ? " (COMPLETED)" : "" %></strong>
  <%= link_to "Edit", edit_goal_url %>
  <%= button_to "Delete", goal_url(goal), method: :delete %>
  <br>
  <%= goal.body %>

<% elsif goal.is_private == false%>

  <strong><%= link_to "#{goal.title}", goal_url(goal) %> - <%= goal.user.username %> <%= (goal.completed) ? " (COMPLETED)" : "" %></strong>
  <%= goal.body %>

<% end  %>

<br>
